{% extends "layout.twig" %}

{% block title %}Welcome | TicketApp{% endblock %}

{% block content %}
<section class="hero">
  <div class="hero-content">
    <h1 class="hero-title">Manage Your Tickets Easily 🎟️</h1>
    <p class="hero-subtitle">
      Simplify your workflow — create, view, and manage tickets seamlessly in one place.
    </p>
    <div class="hero-buttons">
      <a href="/signup" class="btn-primary">Get Started</a>
      <a href="/login" class="btn-outline">Login</a>
    </div>
  </div>

  <!-- Decorative elements -->
  <div class="decorative-circle"></div>
  <svg class="wave-svg" viewBox="0 0 1440 320">
